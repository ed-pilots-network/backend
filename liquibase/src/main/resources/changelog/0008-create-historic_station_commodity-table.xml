<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="3fe19ef0-886c-4d19-99d6-9bbf16377c63" author="daniel-j-mason">
        <createTable tableName="historic_station_commodity_market_data">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="station_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_historic_station_commodity_market_data_station_id" referencedTableName="station" referencedColumnNames="id"/>
            </column>
            <column name="commodity_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_historic_station_commodity_market_data_commodity_id" referencedTableName="commodity" referencedColumnNames="id"/>
            </column>
            <column name="timestamp" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="mean_price" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="buy_price" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="stock" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="stock_bracket" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="sell_price" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="demand" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="demand_bracket" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="status_flags" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="historic_station_commodity_market_data"
                             columnNames="station_id, commodity_id, timestamp"/>
    </changeSet>

</databaseChangeLog>
