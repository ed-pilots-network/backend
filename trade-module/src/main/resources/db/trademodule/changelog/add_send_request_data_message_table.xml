<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="add_send_request_data_message_table" author="pveeckhout">
        <addColumn tableName="request_data_message">
            <column name="send" type="boolean"/>
        </addColumn>

        <sql>
            UPDATE request_data_message
            SET send = false
            WHERE send IS NULL;
        </sql>

        <addNotNullConstraint tableName="request_data_message" columnName="send"/>

    </changeSet>
</databaseChangeLog>
